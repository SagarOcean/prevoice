<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/reciever_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >



        <ImageView
            android:id="@+id/reciever_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_image" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/accept_call"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                app:lottie_autoPlay="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:lottie_fileName="calling.json"
                app:lottie_loop="true" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/hang_up"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                app:lottie_autoPlay="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:lottie_fileName="hangUp.json"
                app:lottie_loop="true" />

        </LinearLayout>



    </RelativeLayout>



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/home_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:lottie_autoPlay="true"
        android:scaleType="fitCenter"
        app:lottie_fileName="splash.json"
        app:lottie_loop="true" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/call_now"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        app:lottie_autoPlay="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:lottie_fileName="call.json"
        app:lottie_loop="true" />



</LinearLayout>